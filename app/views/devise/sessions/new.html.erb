<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="mt-3">Log in</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
        </div>
        <div class="form-check pl-0">
          <%= f.input :remember_me, as: (:boolean if devise_mapping.rememberable?), label: "<span class='ml-2 '>Remember me</span>".html_safe %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary px-5" %>
          <%= link_to "Sign up", new_registration_path(resource_name) , class:"d-block mt-2" %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:'mt-2'%>
        </div>
      <% end %>
    </div>
  </div>
</div>

