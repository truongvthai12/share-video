<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="mt-3">Forgot your password?</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control"  } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary px-5' %>
          <%= link_to "Log in", new_session_path(resource_name), class:"d-block mt-2" %>
          <%= link_to "Sign up", new_registration_path(resource_name) , class:"d-block mt-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

